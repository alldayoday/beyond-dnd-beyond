<div id="notesAll">
<% profile.sessionNotes.forEach(sessionNote => { %>
<div id="notesCard" class="card bg-dark" style="width: 30%;">
  <img class="card-img" src="https://i.imgur.com/UHGIFhw.png" alt="Card image">
  <div class="card-img-overlay">
    <h3 id="notesTitle" class="card-title">SESSION NUMBER: <%= sessionNote.session %></h3>
    <h6 class="card-subtitle mb-2 text-muted">Session Date: <%= sessionNote.date %></h6>
    <p id="notes" class="card-text"><%=sessionNote.notes%>.</p>
    <form action="/profiles/<%= profile._id %>/sessionNotes/<%= sessionNote._id%>?_method=DELETE" method="POST">
      <button class="btn" type="submit">X</button>
      </form>
  </div>
</div>
<% }) %>
</div> 
<form id="newNote" action="/profiles/<%=profile._id%>/sessionNotes" method="POST">
  <label>Session Number:
    <input id="sessionNum" type="number" name="session">
  </label><br>
  <label>Date:
    <input type="datetime-local" name="date">
  </label><br>
  <label>Notes:
    <textarea rows="10" cols="50" id="notes" type="textarea" name="notes">
      </textarea>
  </label><br>
  <button id="submitNote" type="submit">Add Note</button>
</form>

