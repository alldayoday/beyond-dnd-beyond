<%- include('./partials/html-head') %>
<%- include('./partials/nav') %>

<main>
  <h1>Hello, <%= user ? user.profile.name : "Friend!" %></h1>
  <h2><%= user ? "Ready to Roll?" : " " %></h2>
  <div id="indexLinks">
  <a href="/characters/">Characters</a>
  <a href="/characters/new">New Character</a>
  <% if (user) { %>
    <a href="/auth/logout">Logout</a>
  <% } else { %>
    <a href="/auth/google" class="siwg-link">
      <button type="submit" class="siwg">
        <img id="siwg-image" alt="Sign in with Google" />
      </button>
    </a>
  <% } %>
</div>
</main>

<%- include('./partials/footer') %>
