<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th>Armor Class</th>
      <th>Strength</th>
      <th>Dexterity</th>
      <th>Constitution</th>
      <th>Intelligence</th>
      <th>Wisdom</th>
      <th>Charisma</th>
    </tr>
  </thead>
  <tbody>
    <td><%= character.name %></td>
    <td><%= character.class %></td>
    <td><%= character.armorClass %></td>
    <td><%= character.str %></td>
    <td><%= character.dex %></td>
    <td><%= character.con %></td>
    <td><%= character.int %></td>
    <td><%= character.wis %></td>
    <td><%= character.cha %></td>
    </tbody>
  </table>
  <a href="/characters/<%= character._id %>/edit">
    <button>Edit Character</button>
  </a>
  <form action="/characters/<%= character._id %>?_method=DELETE" method="POST">
    <button>Delete Character</button>
  </form>
</main>
<%- include('../partials/footer') %>